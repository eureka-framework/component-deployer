{
  "name": "eureka/component-deployer",
  "description": "PHP Installer & Deployer for projects based on Eureka Framework",
  "minimum-stability": "stable",
  "type": "project",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Deployer\\": "./src"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Deployer\\Tests\\Unit\\": "./tests/unit"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",

    "eureka/component-console": "^6.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.51.0",
    "maglnet/composer-require-checker": "^4.10.0",
    "phpstan/phpstan": "^1.10.60",
    "phpstan/phpstan-phpunit": "^1.3.16",
    "phpstan/phpstan-strict-rules": "^1.5.2",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.13"
  }
}
