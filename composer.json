{
  "name": "eureka/component-deployer",
  "description": "PHP Installer & Deployer for projects based on Eureka Framework",
  "minimum-stability": "stable",
  "type": "project",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Deployer\\": "./src"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Deployer\\Tests\\": "./tests"
    }
  },

  "config": {
    "discard-changes": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "7.4.*|8.0.*|8.1.*",

    "eureka/component-console": "^5.1"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  }
}
